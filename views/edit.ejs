<%include partials/header%>

<div class="ui main text container segment">
        <div class="ui huge header">Edit Blog</div>
        <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input required type="text" name="blog[title]" value="<%=blog.title%>">
            </div>
            <div class="field">
                    <label>Image URL</label>
                    <input required type="text" name="blog[image]" placeholder="Image link" value="<%= blog.image %>">
            </div>
            <div class="field">
                    <label>Title</label>
                    <textarea required name="blog[body]" placeholder="Body"><%= blog.body %></textarea>
            </div>
            <input class="ui inverted big primary button" type="submit" value="Save">
        </form>
</div>

<%include partials/footer%>